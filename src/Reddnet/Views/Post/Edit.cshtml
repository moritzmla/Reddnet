@model Reddnet.Web.ViewModels.PostViewModel

@{
}

<div class="column-container" style="width: 40%; margin: auto;">
    <form asp-controller="Post" asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="container" style="flex-direction: row">
            <div class="form-group">
                <label>Cover</label>

                <label for="imageInput">
                    <img id="imageDisplay" src="data:image;base64,@System.Convert.ToBase64String(Model.Cover)" alt="COVER" height="200" width="200" />
                    <input id="imageInput" type="file" name="formFile" />
                </label>
            </div>

            <div style="flex-direction: column; margin-left: 15px; width: 100%;">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" value="@Model.Title" />
                </div>
            </div>
        </div>

        <div class="container" style="margin-top: 10px;">
            <div class="form-group">
                <label asp-for="Link"></label>
                <input asp-for="Link" value="@Model.Link">
            </div>
        </div>

        <div class="container" style="margin-top: 10px;">
            <div class="form-group">
                <label asp-for="Text">Text</label>
                <textarea asp-for="Text">@Model.Text</textarea>
            </div>

            <input class="clickLink" type="submit" value="Save" />

            <div class="errors" asp-validation-summary="All"></div>
        </div>
    </form>
</div>

